pipeline {
    agent any
    triggers { 
      githubPush() 
   }
    environment {
        DOCKER_IMAGE_NAME = 'calculator'
        GITHUB_REPO_URL = 'https://github.com/devdeepsarkar/MiniProject.git'
    }

    stages {
        stage('Checkout') {
            steps {
                script {
                    // Checkout the code from the GitHub repository
                    git branch: 'main', url: "${GITHUB_REPO_URL}"
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Build Docker image
                    docker.build("${DOCKER_IMAGE_NAME}", '.')
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: 'DockerHubCred',
                    usernameVariable: 'DOCKER_USER',
                    passwordVariable: 'DOCKER_PASS'
                )]) {
                    sh '''
                        echo $DOCKER_PASS | /usr/local/bin/docker login -u $DOCKER_USER --password-stdin
                        /usr/local/bin/docker tag calculator devdeepsarkar/calculator:latest
                        /usr/local/bin/docker push devdeepsarkar/calculator:latest
                    '''
                }
            }
        }

   stage('Run Ansible Playbook') {
        steps {
            sh '/opt/homebrew/bin/ansible-playbook deploy.yml -i inventory'
        }
    }
    stage('Test Container') {
        steps {
            sh 'docker run --rm devdeepsarkar/calculator 5 3 1'
        }
    }
    }
}
